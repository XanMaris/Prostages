{% extends 'base.html.twig' %}



{% block title %}Liste d'entreprise {% endblock %}

{% block body %}
<div class="col-md-12">

    <table class="table">
				<thead>
					<tr>
						<th>
							#ID
						</th>
						<th>
							Nom
						</th>
						<th>
							Domaine
						</th>
						<th>
							URL
						</th>
					</tr>
				</thead>
				<tbody>
{% for uneEntreprise in entreprises %}
		{% if uneEntreprise.stages|length != NULL %}
					
			<tr class="table-success">
				<td>
					{{ uneEntreprise.ID }}
				</td>
				<td>
					<li><code><a href="{{ path('stages-entreprise', {'id' : uneEntreprise.ID }) }}">{{ uneEntreprise.nom }}</a></code></li>
				</td>
				<td>
					{{ uneEntreprise.activite }}
				</td>
				<td>
					{{uneEntreprise.URLsite }}
				</td>
			</tr>
		
		{% endif %} 
	
{% endfor %}
					
				</tbody>
			</table>
		</div>
    

     {% endblock %}
