{% extends 'base.html.twig' %}

{% block title %}stage de la formation {% endblock %}

{% block body %}
<div class="col-md-12">

    <table class="table">
				<thead>
					<tr>
						<th>
							#ID
						</th>
						<th>
							Nom du Stage
						</th>
						<th>
							Description
						</th>
					</tr>
				</thead>
				<tbody>
{% for unStage in formation.stages %}

					
					<tr class="table-success">
						<td>
							{{ unStage.ID }}
						</td>
						<td>
							<dt> {{ unStage.titre }} </dt>
						</td>
						<td>
								{{ unStage.entreprise.adresse}}
						</td>

						<td>
								{{ unStage.email }}
						</td>
						<td>
								<li><code><a href="{{ path('detail_stages', {'id' : unStage.ID }) }}">Voir aussi </a></code></li>
						</td>
					</tr>
{% endfor %}
					
				</tbody>
			</table>
		</div>
    

     {% endblock %}
