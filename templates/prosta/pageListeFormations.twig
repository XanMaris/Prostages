{% extends 'base.html.twig' %}



{% block title %}Voici la liste des stages par Formations {% endblock %}

{% block body %}
<div class="col-md-12">

    <table class="table">
				<thead>
					<tr>
						<th>
							#ID
						</th>
						<th>
							Nom Court
						</th>
						<th>
							Nom Complet
						</th>
					</tr>
				</thead>
				<tbody>
{% for uneFormation in formations %}

					
					<tr class="table-success">
						<td>
							{{ uneFormation.ID }}
						</td>
						<td>
							<li><code><a href="{{ path('StagesDeformation', {'id' : uneFormation.ID }) }}">{{ uneFormation.nomCourt }}</a></code></li>
						</td>
						<td>
								{{ uneFormation.nom }}
						</td>
					</tr>
{% endfor %}
					
				</tbody>
			</table>
		</div>
    

     {% endblock %}
